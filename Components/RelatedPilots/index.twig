{% if items|length > 0 %}
  <flynt-component load:on="visible" name="RelatedPilots" class="bg-cover bg-no-repeat" style="background-image: url('{{ labels.backgroundImage }}'); background-color: var(--blue);">
    <div class="w-full max-w-screen-xl mx-auto px-sm py-md md:px-lg md:py-xl">
      {% if preContentTitle %}
      <div class="w-full flex justify-start items-center text-white">
        <h2>{{ preContentTitle }}</h2>
      </div>
      {% endif %}
      <ul class="list-none w-full p-0 mx-auto mt-lg md:mt-xl grid grid-cols-1 sm:grid-cols-3 gap-sm sm:gap-md">
        {% for item in items %}
          <li class="grid-item {{ item.post_type }}">
            <div class="content">
              <a href="{{ item.link }}" class="content-link" title="{{ item.title }}">
                <figure class="mb-sm overflow-hidden object-cover aspect-4/3">
                  <img class="content-image lazyload object-cover"
                    src="{{ item.thumbnail.src }}"
                    data-srcset="{{function('wp_get_attachment_image_srcset', item.thumbnail.id)}}"
                    data-sizes="auto">
                </figure>
                <div class="content-inner mt-[10px] flex flex-col">
                  <div class="text-body bodyBold text-white">{{ item.title }}</div>
                  <div class="text-body bodyBold text-white">
                    {% if item.category %}<span>{{ item.category }} · </span>{% endif %}
                    {% if item.partner %}<span>{{ item.partner }}</span>{% endif %}
                  </div>
                  <div class="text-body pt-sm light text-white">{{ item.intro|truncate(12) }}</div>
                  <div class="text-body text-white arrow mt-md">→</div>
                </div>
              </a>
            </div>
          </li>
        {% endfor %}
      </ul>
    </div>
  </div>
{% endif %}
