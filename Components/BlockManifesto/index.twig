<flynt-component load:on="visible" name="BlockManifesto" class="bg-black">
  <div class="w-full max-w-screen-xl mx-auto px-sm pt-sm pb-lg md:px-lg md:pt-lg md:pb-xxl">
    {% if preContentTitle %}
      <div class="preContent">
        <div class="preContentTitle text-grey">
          <h1>{{ preContentTitle }}</h3>
        </div>
      </div>
    {% endif %}
    <div class="mt-lg md:mt-xxl w-full max-w-screen-lg grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-sm sm:gap-md">
      {% for panel in accordionPanels %}
        <div x-cloak x-data="{ isOpen: false }" class="panel">
          <div>
            <div class="flex flex-row gap-sm">
              <div class="flex flex-col gap-sm">
                <img class="lazyload w-full object-cover aspect-3/4 h-[200px]"
                  src="{{ panel.panelImage.src | resize(32) }}"
                  data-srcset="{{function('wp_get_attachment_image_srcset', panel.panelImage.id)}}"
                  data-sizes="auto"
                  alt="{{ panel.panelImage.alt|e }}">
              </div>
              <div>
                <h3 class="text-grey">{{ panel.panelTitle|e }}</h3>
                <div class="text-grey">{{ panel.panelIntro|e('wp_kses_post') }}</div>
              </div>
            </div>
            <div class="flex justify-center mt-sm">
              <button 
                @click="isOpen = true
                $nextTick(() => $refs.modalCloseButton.focus())
                " class="panel-trigger button button--plusOrange" type="button" aria-expanded="false" aria-controls="content-{{ loop.index }}">
              </button>
            </div>
          </div>
          <div 
            x-show="isOpen" 
            class="panel-content absolute top-0 right-0 w-full lg:w-[50vw] h-full bg-grey p-sm lg:p-lg" 
            x-transition:enter="transition cubic-bezier(0.19, 1, 0.22, 1) duration-800" 
            x-transition:enter-start="opacity-0" 
            x-transition:enter-end="opacity-100" 
            x-transition:leave="transition cubic-bezier(0.19, 1, 0.22, 1) duration-800" 
            x-transition:leave-start="opacity-100" 
            x-transition:leave-end="opacity-0" 
            aria-hidden="true" 
            id="content-{{ loop.index }}">
            <div class="h-full flex flex-col gap-md justify-between">
              <div class="flex flex-row grow h-full justify-between align-start items-start">
                <div class="w-1/2 flex flex-col grow h-full justify-between align-start items-start">
                  <div class="h2 text-black">{{ panel.panelTitle|e }}</div>
                  <div class="cursor-pointer text-orange h2" @click="isOpen = false"
                    x-ref="modalCloseButton">
                    ‚Üê
                  </div>
                </div>
                <div class="w-1/2">
                  <img class="lazyload w-full object-cover aspect-3/4"
                    src="{{ panel.panelImage.src | resize(32) }}"
                    data-srcset="{{function('wp_get_attachment_image_srcset', panel.panelImage.id)}}"
                    data-sizes="auto"
                    alt="{{ panel.panelImage.alt|e }}">
                </div>
              </div>
              <div class="text">{{ panel.panelContent|e('wp_kses_post') }}</div>
            </div>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</flynt-component>
