<ul class="menu menu--level-{{ level }} h-full w-full flex flex-row sm:flex-col items-start justify-between sm:justify-end">
  {% for item in items %}
    <li class="{{ item.classes | join(' ') }}">
      <a class="menu-link font-bold" href="{{ item.link }}"{% if item.target %} target="{{ item.target }}"{% endif %}>{{ item.title }}</a>
      {% if item.children and level + 1 <= maxLevel %}
        {% include 'Partials/_menu.twig' with { 'items': item.children, 'level': level + 1, 'maxLevel': maxLevel } only %}
      {% endif %}
    </li>
  {% endfor %}
</ul>
